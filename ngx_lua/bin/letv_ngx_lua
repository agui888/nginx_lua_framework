HELP_INFO  = [==[
Usage:
      fuhao_ngx_lua new <APP_NAME> <APP_PATH> : create a new fuhao_ngx_lua app
      fuhao_ngx_lua help                      : show this help
]==]

NGINX_CONF = [==[
        location / {
            #...
            default_type text/html;
            set $FUHAO_NGX_LUA_HOME '__FUHAO_NGX_LUA_HOME__';
            set $FUHAO_NGX_LUA_APP_NAME  '__FUHAO_NGX_LUA_APP_NAME__'; 
            set $FUHAO_NGX_LUA_APP_PATH  '__FUHAO_NGX_LUA_APP_PATH__';
            access_by_lua_file '$FUHAO_NGX_LUA_HOME/luasrc/fuhao_access.lua';
            content_by_lua_file '$FUHAO_NGX_LUA_HOME/luasrc/fuhao_content.lua';
            #...
        }
]==]

AVAILABLE_CMD={"new","help"}

function __FILE__() return debug.getinfo(2,'S').source end

function show_help_and_exit()
    print(HELP_INFO)
    os.exit()
end

function new_app(name,path)
end

print(HELP_INFO)
